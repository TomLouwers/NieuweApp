@tailwind base;
@tailwind components;
@tailwind utilities;

/* Design tokens */
:root {
  /* Colors */
  --color-background: 255 255 255; /* rgb */
  --color-foreground: 17 24 39; /* slate-900 */
  --color-muted: 107 114 128; /* gray-500 */
  --color-primary: 59 130 246; /* indigo-500*/
  --color-primary-foreground: 255 255 255;
  --color-border: 229 231 235;

  /* Spacing */
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-6: 1.5rem;
  --space-8: 2rem;

  /* Typography */
  --font-sans: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Noto Sans, Ubuntu, Cantarell, Helvetica Neue, Arial, "Apple Color Emoji", "Segoe UI Emoji";
  --text-xs: 0.75rem;
  --text-sm: 0.875rem;
  --text-base: 1rem;
  --text-lg: 1.125rem;
  --text-xl: 1.25rem;
  --text-2xl: 1.5rem;

  /* Radius */
  --radius-sm: 0.25rem;
  --radius-md: 0.375rem;
  --radius-lg: 0.5rem;
  --radius-xl: 0.75rem;

  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0,0,0,0.05);
  --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -2px rgba(0,0,0,0.1);

  /* Transitions */
  --ease: cubic-bezier(0.2, 0.8, 0.2, 1);
  --duration: 150ms;
}

/* CSS variables to Tailwind-style utility usage */
.bg-background { background-color: rgb(var(--color-background)); }
.text-foreground { color: rgb(var(--color-foreground)); }
.text-muted { color: rgb(var(--color-muted)); }
.border-border { border-color: rgb(var(--color-border)); }
.btn-primary { background-color: rgb(var(--color-primary)); color: rgb(var(--color-primary-foreground)); }

/* Focus outline per requirement */
button:focus, input:focus, select:focus {
  outline: 2px solid #3B82F6; outline-offset: 2px;
}

/* Base typography */
html { font-family: var(--font-sans); }
h1 { font-size: var(--text-2xl); font-weight: 700; }
h2 { font-size: var(--text-xl); font-weight: 600; }
p { font-size: var(--text-base); }

