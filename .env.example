# Environment configuration for deployment/local dev

# Anthropic API key for Claude access (server-side)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Supabase project URL (public)
NEXT_PUBLIC_SUPABASE_URL=

# Supabase service role key (server-side only; NEVER expose to client)
SUPABASE_SERVICE_KEY=

# Ensure production mode on deploy
NODE_ENV=production

# Optional: OpenAI support (if set, preferred over Anthropic)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Rate limit configuration (v1 endpoints)
RATE_LIMIT_MAX=20
RATE_LIMIT_WINDOW_MS=60000

# Content quality gates
GENERATE_MIN_WORDS=550
GENERATE_MAX_WORDS=1200

# AI defaults (Prompt Engineering Guide)
AI_MAX_TOKENS_DEFAULT=4000
AI_TEMPERATURE_DEFAULT=0.7
AI_TOP_P_DEFAULT=0.9


# Frontend analytics (optional)
# Set to any non-empty value to enable in-app event tracking (/api/analytics)
NEXT_PUBLIC_ANALYTICS_KEY=

# Plausible (optional) â€” if set, loads their script in app/layout.tsx
# Example: plausible.yourdomain.com or yourdomain.com
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Optional: lead capture webhook (if set, POSTs leads to this URL)
LEAD_WEBHOOK_URL=
